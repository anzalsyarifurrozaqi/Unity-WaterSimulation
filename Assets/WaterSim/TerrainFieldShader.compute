#pragma kernel SetTerrainTexture;

#include "WaterSimulationCommonUniforms.cginc"


RWTexture2D<float4> _terrain_texture;

[numthreads(8,8,1)]
void SetTerrainTexture (uint3 id : SV_DispatchThreadID)
{
    float x = id.x /(float) _texture_size;
    float y = id.y /(float) _texture_size;

    _terrain_texture[id.xy] = float4(x, y, 0.0, 0.0);
}
